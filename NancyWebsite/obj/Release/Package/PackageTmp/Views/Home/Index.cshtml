    <!-- ======= intern group Section ======= -->
    <section id="intern" class="intern section-bg">
        <div class="container" data-aos="fade-up">

            <div class="section-title">
                <h2>Join the Id Intern group</h2>
                   </div>

            <div class="row">
                <div class="col-lg-2 col-md-12"></div>
                    <div class="col-lg-4 col-md-12">
                        <div class="box" data-aos="fade-up" data-aos-delay="100">
                            <p>
                                I run internship programs twice a year for aspiring instructional designers.
                                I mentor my interns and help them build skills required to enter this field.
                                I also help my interns land opportunities by reviewing their resumes, optimizing my network and through practice opportunities.
                            </p>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-12 mt-12 mt-md-0">
                       
                        <div class="box featured" data-aos="fade-up" data-aos-delay="200">
                            <h5>Join ID Intern Group</h5>
                            <p> </p>
                            <form action="@Url.Action("Index", "Home")" method="post" role="form" class="php-email-form">
                                <div class="row">
                                    <input type="hidden" id="IsEnquiry" name="IsEnquiry" value="False" />
                                    
                                    <div class="col form-group">
                                        <input type="email" class="form-control" name="Email" id="Email" placeholder="Your Email" required>
                                    </div>
                                </div>

